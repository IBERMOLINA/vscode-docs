# Application Configuration
NODE_ENV=production
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://admin:changeme@mongo:27017/performance-demo?authSource=admin
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changeme

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# JWT Configuration (if implementing authentication)
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRE=24h

# Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting
API_RATE_LIMIT=100  # requests per 15 minutes
UPLOAD_RATE_LIMIT=10  # uploads per 15 minutes